# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=true

# HuggingFace Configuration
# Fix for model loading errors - ensures proper URL construction
HF_ENDPOINT=https://huggingface.co
# HF_TOKEN=your_token_here  # Optional: for private models or rate limiting
# HF_HUB_OFFLINE=0  # Set to 1 to use only cached models

# BERT Model Configuration
BERT_MODEL=all-MiniLM-L6-v2
# MODEL_CACHE_DIR=./model_cache  # Optional: specify custom cache directory
# MODEL_DEVICE=cpu  # cpu, cuda, or None for auto-detect
MAX_SEQ_LENGTH=256

# Model Loading Options
LAZY_LOAD_MODEL=true
SHOW_PROGRESS=false
LOCAL_FILES_ONLY=false

# Scoring Configuration
WEIGHT_GENERAL=0.10
WEIGHT_SKILLS=0.40
WEIGHT_EXPERIENCE=0.30
WEIGHT_EDUCATION=0.20

# Score Thresholds
THRESHOLD_SKILLS_STRONG=30
THRESHOLD_EXP_STRONG=20
THRESHOLD_EDU_STRONG=12
THRESHOLD_GEN_STRONG=7

# Experience Configuration
EXP_MAX_SCALING=1.5
DEGREE_BOOST=0.2
