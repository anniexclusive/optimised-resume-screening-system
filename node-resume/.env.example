# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Python API Configuration
PYTHON_API_URL=http://localhost:5000
API_TIMEOUT=120000  # 2 minutes for ML processing
API_MAX_RETRIES=3   # Number of retries for transient failures
API_RETRY_DELAY=1000  # Initial delay between retries (ms)

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB per file
MAX_FILES=10

# CORS Configuration (comma-separated list of allowed origins)
# Single origin: CORS_ORIGINS=http://localhost:3000
# Multiple origins: CORS_ORIGINS=http://localhost:3000,https://app.example.com,https://staging.example.com
# Allow all (NOT recommended for production): CORS_ORIGINS=*
CORS_ORIGINS=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info  # debug, info, warn, error

# Authentication Configuration
# IMPORTANT: Set ENABLE_AUTH=true in production!
ENABLE_AUTH=false  # Set to true to require API keys

# API Keys (comma-separated)
# Generate strong keys: openssl rand -hex 32
# Example: API_KEYS=key1,key2,key3
API_KEYS=your_api_key_here,another_key_here

# Production Example:
# ENABLE_AUTH=true
# API_KEYS=abc123def456,xyz789uvw012
