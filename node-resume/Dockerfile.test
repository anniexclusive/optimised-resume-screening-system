# Node.js Backend Test Dockerfile
# Used for running tests, linting, and code quality checks

FROM node:18-alpine

WORKDIR /app

# Install curl for healthchecks and testing
RUN apk add --no-cache curl

# Copy package files
COPY package*.json ./

# Install ALL dependencies (including devDependencies)
RUN npm ci

# Copy source code
COPY . .

# Create non-root user
RUN addgroup -g 1001 -S testuser && \
    adduser -S testuser -u 1001 && \
    chown -R testuser:testuser /app

USER testuser

# Default command runs tests
CMD ["npm", "test"]
